<%-include header %>
<div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">订单详情</h3>
      </div>
      <div class="panel-body">
        <form action="post">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>序号</th>
              <th>商品名称</th>
              <th>购买数量</th>
              <th>商品定价</th>
              <th>商品原价</th>
              <th>总价</th>
              <th>卖家</th>
          </thead>
          <tbody>
            <% user.cart.forEach(function(commodity, index){
                %>
                    <tr>
                      <th scope="row"><%= index+1 %></th>
                      <td><a href="/item?id=<%= commodity[0] %>"><%= commodity[1] %></a></td>
                      <td><%= commodity[2] %></td>
                      <td><%= commodity[3] %></td>
                      <td><%= commodity[4] %></td>
                      <td><%= commodity[2]*commodity[3] %> 元</td>
                      <td><%= commodity[5] %></td>
                    </tr>
                <%
                })
            %>
          </tbody>
        </table>
        <p><span style="float:right;">总计：<%= sum %> 元</span></p>
        </form>
      </div>
    </div>
</div>
<%- include footer %>